<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Sims1WidescreenPatcher.Core.ViewModels;assembly=Sims1WidescreenPatcher.Core"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sims1WidescreenPatcher.UI.Dialogs.CareerEditorDialog"
        Title="Career Editor">

	<Design.DataContext>
		<vm:CareerEditorDialogViewModel />
	</Design.DataContext>
	
	<Grid ColumnDefinitions="*,*">
		<StackPanel Grid.Column="0">
			<Button Command="{Binding ExtractWorkIffCmd}">Extract Work.iff</Button>
			<ComboBox ItemsSource="{Binding Careers}" SelectedItem="{Binding SelectedCareer}" PlaceholderText="Career Name">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Content.CareerInfo.CareerName}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<DataGrid ItemsSource="{Binding Jobs}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedJob}">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Job Name" Binding="{Binding JobName}" />
				</DataGrid.Columns>
			</DataGrid>
		</StackPanel>
		<StackPanel Grid.Column="1">
			<StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label>Job name:</Label>
					<TextBox Text="{Binding JobName}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label>Male skin:</Label>
					<TextBox Text="{Binding MaleSkin}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label>Female skin:</Label>
					<TextBox Text="{Binding FemaleSkin}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label>Texture:</Label>
					<TextBox Text="{Binding Texture}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Label>Accessory:</Label>
					<TextBox Text="{Binding Accessory}" />
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<StackPanel>
					<Label>Skills and friends needed</Label>
					<StackPanel Orientation="Horizontal">
						<Label>Friends</Label>
						<NumericUpDown Value="{Binding FriendsNeeded}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Cooking</Label>
						<NumericUpDown Value="{Binding Cooking}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Mechanical</Label>
						<NumericUpDown Value="{Binding Mechanical}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Charisma</Label>
						<NumericUpDown Value="{Binding Charisma}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Body</Label>
						<NumericUpDown Value="{Binding Body}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Logic</Label>
						<NumericUpDown Value="{Binding Logic}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Creativity</Label>
						<NumericUpDown Value="{Binding Creativity}" />
					</StackPanel>
				</StackPanel>

				<StackPanel>
					<Label>Mood changes per hour</Label>
					<StackPanel Orientation="Horizontal">
						<Label>Hunger</Label>
						<NumericUpDown Value="{Binding Hunger}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Comfort</Label>
						<NumericUpDown Value="{Binding Comfort}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Hygiene</Label>
						<NumericUpDown Value="{Binding Hygiene}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Bladder</Label>
						<NumericUpDown Value="{Binding Bladder}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Energy</Label>
						<NumericUpDown Value="{Binding Energy}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Fun</Label>
						<NumericUpDown Value="{Binding Fun}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Social</Label>
						<NumericUpDown Value="{Binding Social}" />
					</StackPanel>
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<StackPanel>
					<Label>General information</Label>
					<StackPanel Orientation="Horizontal">
						<Label>Salary</Label>
						<NumericUpDown Value="{Binding Salary}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>Begin time</Label>
						<NumericUpDown Value="{Binding BeginTime}" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<Label>End time</Label>
						<NumericUpDown Value="{Binding EndTime}" />
					</StackPanel>
					<ComboBox ItemsSource="{Binding CarTypes}" SelectedItem="{Binding CarType}" PlaceholderText="Vehicle" />
				</StackPanel>

				<StackPanel>
					<Button>OK</Button>
					<Button>Cancel</Button>
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
