<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:Sims1WidescreenPatcher.Core.ViewModels;assembly=Sims1WidescreenPatcher.Core"
        mc:Ignorable="d"
        Height="150"
        Width="600"
        x:Class="Sims1WidescreenPatcher.UI.Views.MainWindow"
        Icon="/Assets/SimsICO.ico"
        SizeToContent="Height"
        Title="Sims 1 Widescreen Patcher">
    <Design.DataContext>
        <viewModels1:MainWindowViewModel />
    </Design.DataContext>

    <Grid IsSharedSizeScope="True">
        <StackPanel Margin="5">
            <!--Row 1-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="80" SharedSizeGroup="button" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Margin="0 0 5 0"
                         x:Name="FileDialog"
                         Text="{Binding Path}" />
                <Button Grid.Column="1"
                        x:Name="BrowseButton"
                        Command="{Binding OpenFile}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Content="Browse" />
            </Grid>
            <!--Row 2-->
            <Grid Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" SharedSizeGroup="button" />
                    <ColumnDefinition Width="*" SharedSizeGroup="button" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label>Resolution</Label>
                    <ComboBox Margin="0 0 5 0"
                              x:Name="ResolutionCombo"
                              Items="{Binding Resolutions}"
                              SelectedItem="{Binding SelectedResolution}"
                              HorizontalAlignment="Stretch">
                        <ToolTip.Tip>
                            <TextBlock TextWrapping="Wrap">
Resolutions supported by your monitor.
800x600 and 1024x768 are the two default resolutions for The Sims.
1600xX resolutions have game breaking graphical issues.
                            </TextBlock>
                        </ToolTip.Tip>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label>Wrapper</Label>
                    <ComboBox Margin="0 0 5 0"
                              x:Name="WrapperCombo"
                              Items="{Binding Wrappers}"
                              SelectedItem="{Binding SelectedWrapper}"
                              HorizontalAlignment="Stretch">
                        <ToolTip.Tip>
                            <TextBlock TextWrapping="Wrap">
None: Low framerate. Use if DgVoodoo2 and DDrawCompat don't work.
DgVoodoo2: Low/Medium framerate. Use if DDrawCompat doesn't work.
DDrawCompat: High framerate. Occasional visual glitches.
                            </TextBlock>
                        </ToolTip.Tip>
                    </ComboBox>
                </StackPanel>
                <Button Margin="0 0 5 0"
                        Grid.Column="2"
                        x:Name="UninstallButton"
                        Command="{Binding UninstallCommand}"
                        Content="Uninstall"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center" />
                <Button Grid.Column="3"
                        x:Name="PatchButton"
                        Command="{Binding PatchCommand}"
                        Content="Patch"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center" />
            </Grid>
            <!--Row 3-->
            <Grid Margin="0 5 0 0">
                <StackPanel>
                    <Label Padding="2">Progress</Label>
                    <ProgressBar x:Name="ProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 ShowProgressText="True"
                                 Value="{Binding Progress}" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>